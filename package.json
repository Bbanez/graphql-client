  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "build:ts": "tsc --project tsconfig.output.json",
    "build": "node tools.js --build",
    "bundle": "node tools.js --bundle",
    "bundle:local": "node tools.js --local-dev-bundle",
    "link": "node tools.js --link",
    "unlink": "node tools.js --unlink",
    "publish": "node tools.js --publish",
    "pack": "node tools.js --pack",
    "lint": "eslint . --ext .ts",
    "test": "mocha -r ts-node/register test/integration/*.test.ts --recursive --exit",
    "test:active": "mocha -r ts-node/register test/integration/*.active.test.ts --recursive --exit",
    "test:unit": "mocha -r ts-node/register test/unit/*.test.ts --recursive --exit",
    "test:active:unit": "mocha -r ts-node/register test/unit/*.active.test.ts --recursive --exit"
  },
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/fs-extra": "^9.0.13",
    "@types/isomorphic-fetch": "^0.0.35",
    "@types/mocha": "^9.0.0",
    "@types/node": "^15.6.2",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "chai": "^4.3.4",
    "eslint": "^8.0.1",
    "fs-extra": "^10.0.0",
    "mocha": "^9.1.3",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.4.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bbanez/graphql-client.git"
  },
  "bugs": {
